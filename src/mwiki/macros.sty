\DeclareMathOperator*{\argmax}{\mathrm{\arg\,max}\,}
\DeclareMathOperator*{\argmin}{\mathrm{\arg\,min}\,}
\newcommand{\reals}{ { \mathbb{R} } }

% Laplace Transform 
\newcommand{\laplace}[1]{ { \mathcal{L}\{ #1 \} } }

% Fourier Transform
\newcommand{\fourier}[1]{ { \mathcal{F} \{ #1 \}  } }

% Derivative symbol \d instead of \mathrm{d}
\newcommand{\d}{ { \mathrm{d} }  }
% Partial Derivative Symbol \p instead of \partial 
\newcommand{\p}{\partial}
% Euler's Number
\newcommand{\e}{ {\mathrm{e}} }

\newcommand{\R}{ { \mathbb{R} }  }
\newcommand{\C}{ { \mathbb{C} }  }
\newcommand{\BigO}[1]{\mathcal{O}\!\left(#1\right)}

% Absolute value
\DeclarePairedDelimiter{\abs}{\lvert}{\rvert}

% Mathematical Definition 
\newcommand{\def}{ {\triangleq \;} }

\DeclareMathOperator{\sgn}{sgn}

% Vector notation, short for mathbf (bold face)
\newcommand{\v}[1]{{\mathbf{#1}}}

% Derivative (First Order):
\renewcommand{\diff}[2]{\frac{\mathrm{d} #1}{\mathrm{d} #2}}

% Second Order Derivative:
\newcommand{\ddiff}[2]{\frac{\mathrm{d}^2 #1}{\mathrm{d} #2^2}}

% First Order Partial Derivative:
\newcommand{\pd}[2]{\frac{\partial #1}{\partial #2}}

% Second Order Partial Derivative:
\newcommand{\pdd}[2]{\frac{\partial^2 #1}{\partial #2^2}}

% Paired delimiter delimiter - vector norm:
\DeclarePairedDelimiter{norm}{\|}{\|}

% Big Parenthesis delimiter
\DeclarePairedDelimiter{\pa}{\lparen}{\rparen}

